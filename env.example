# Mental Health Tracker Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=sqlite:///mental_health.db

# Flask Secret Key (generate a random key for production)
FLASK_SECRET_KEY=your-secret-key-here

# Google Gemini API Key - Get from https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key-here

# CSRF Secret Key (generate a random key for production)
CSRF_SECRET_KEY=your-csrf-secret-key-here

# Set to true to enable CSRF protection in production
WTF_CSRF_ENABLED=true

# Set to production in production environment
FLASK_ENV=development 

# MindfulMate API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
REDIS_URL=redis://localhost
USER_REGION=US

# MindfulMate Logging
LOG_LEVEL=info

# MindfulMate API Rate Limiting
RATE_LIMIT_TIMES=5
RATE_LIMIT_SECONDS=10 